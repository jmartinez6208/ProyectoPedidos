<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/placeholder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgProducto"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:text="Nombre Producto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgProducto"
        android:layout_marginLeft="30dp"
        android:id="@+id/txtNombreProducto" />

    <TextView
        android:text="Precio Producto "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_below="@id/txtNombreProducto"
        android:layout_toRightOf="@id/imgProducto"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtPrecioProducto" />

    <TextView
        android:text="Tienda Producto "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_below="@id/txtPrecioProducto"
        android:layout_toRightOf="@id/imgProducto"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtTiendaProducto" />

</RelativeLayout>
